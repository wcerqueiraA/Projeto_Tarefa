@page
@model TarefaApp.Pages.TarefaMaster.DeleteModel

@{
    ViewData["Title"] = "Excluir";
}
<div class="box" id="heading">
    <h1>Excluir</h1>
</div>
<div class="box">
<h3>Tem certeza que deseja excluir isso?</h3>
<div class="space">
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tarefa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarefa.Descricao)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarefa.Data)
        </dd>
    </dl>
    
        <form method="post">
        <div class="mt-2">
                <input type="hidden" asp-for="Tarefa.Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" /> |
                <a asp-page="../Index" class="btn btn-success">Voltar</a>
                <br />
        </div>
        </form>
    </div>
</div>
